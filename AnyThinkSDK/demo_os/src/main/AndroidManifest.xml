<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anythink.demo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".DemoApplicaion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light"
        android:usesCleartextTraffic="true" >
    <uses-library
        android:name="org.apache.http.legacy"
        android:required="false" />

    <activity android:name=".MainActivity" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name=".NativeAdActivity"
        android:label="AT Native"
        android:launchMode="singleTask" />
    <activity
        android:name=".RewardVideoAdActivity"
        android:label="AT RewardedVideo"
        android:launchMode="singleTask" />
    <activity
        android:name=".InterstitialAdActivity"
        android:label="AT Interstitial"
        android:launchMode="singleTask" />
    <activity
        android:name=".BannerAdActivity"
        android:label="AT Banner"
        android:launchMode="singleTask" />
    <activity
        android:name=".SplashAdActivity"
        android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout" />
    <activity
        android:name=".SplashAdShowActivity"
        android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
    <activity
        android:name=".NativeBannerActivity"
        android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
    <activity
        android:name=".NativeSplashActivity"
        android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
    </application>

</manifest>
